extends layout

block content
	.container-fluid
		.row
			.col-md-12
				h2= title
				p Welcome to #{title}
		.row
			- if (products.length)
				table.table.table-hover.table-bordered
					thead
						tr
							th Product ID
							th User ID
							th 模板
							th 录入时间
							th 查看
					tbody
						each item in products
							tr(class="item-id-#{item._id}")
								td #{item._id}
								td #{item.user}
								td #{item.template.designId}
								td #{moment(item.updateAt).format('MM/DD/YYYY h:mm:ss a')}
								td: a(target="_blank", href="card/#{item._id}")  查看
			- else
				p You don't have any cards!